@model IEnumerable<Candidate>

@if(Model.Count() > 0)
{
    <h6 class="display-6"> Applications </h6>

    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>E-Mail</th>
                <th>Full Name</th>
                <th>Apply At</th>
                <th>Course</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Candidate candidate in Model)
            {
                <tr>
                    <td>@candidate.Email</td>
                    <td>@candidate.FullName</td>
                    <td>@candidate.ApplyAt</td>
                    <td>@candidate.SelectedCourse</td>
                </tr>
            }
        </tbody>
        
        
    </table>
}
else
{
    <div class="alert alert-info">There is no applications. Please click here to apply</div>
    <a class="btn btn-primary" asp-action="Apply">Apply</a>
}